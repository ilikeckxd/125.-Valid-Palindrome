class Solution(object):
    def isPalindrome(self, s):
        """
        :type s: str
        :rtype: bool
        """
        s1 = []
        s = s.lower()
        for letter in s:
            if letter in "abcdefghijklmnopqrstuvwxyz0123456789":
                s1.append(letter)   
        s2 = s1[:]
        s1.reverse()
        if s1 == s2:
            return True
        else:
            return False
            
            
#Runtime: 56 ms, faster than 35.28% of Python online submissions for Valid Palindrome.
#Memory Usage: 13.8 MB, less than 9.98% of Python online submissions for Valid Palindrome.            
